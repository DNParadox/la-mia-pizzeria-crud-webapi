@{
    Layout = "_Layout";
    ViewData["Title"] = "Dettagli Pizza";
}

@model Pizza


<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center">
                <h1 class="mt-3 mb-3">Dettagli post</h1>
            </div>
            <div class="post-single-image-container">
                <img class="myDimension" src="@Model.Image">
            </div>
            <p>
                <strong>Titolo:</strong>
                @Model.Title
            </p>
            @Model.Category.Title
            <p>
                <strong>Descrizione:</strong>
                @Model.Description
            </p>
            <p>
                <strong>Prezzo:</strong>
                @Model.Price
            </p>
            <p>
                <strong>Tags:</strong>
                @foreach (Tag tag in Model.Tags)
                {
                    <div>
                        <span class="badge bg-primary">@tag.Title</span>
                    </div>
                }
            </p>
        </div>
    </div>
</div>